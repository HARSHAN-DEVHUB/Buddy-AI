# Backend Environment Variables

# Application
DEBUG=True
APP_NAME=Buddy-AI
APP_VERSION=1.0.0
API_PORT=8000
ENVIRONMENT=development

# MT5/Exness Configuration
MT5_ACCOUNT=
MT5_PASSWORD=
MT5_SERVER=Exness-MT5Real

# Binance API (Optional - Leave empty for public data)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/buddy_ai
MONGODB_URI=mongodb://localhost:27017/buddy_ai

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Model Training
MODEL_PATH=./data/models
TRAINING_DATA_PATH=./data/processed

# Logging
LOG_LEVEL=INFO
